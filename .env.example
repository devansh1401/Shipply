# Database
DATABASE_URL="postgresql://user:password@localhost:5432/database_name?schema=public"
DATABASE_URL_SHARD_1="postgresql://user:password@localhost:5432/shard1?schema=public"
DATABASE_URL_SHARD_2="postgresql://user:password@localhost:5432/shard2?schema=public"
DATABASE_URL_SHARD_3="postgresql://user:password@localhost:5432/shard3?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Authentication
AUTH_SECRET="your_auth_secret"
AUTH_GOOGLE_ID="your_google_client_id"
AUTH_GOOGLE_SECRET="your_google_client_secret"

# Socket.IO
NEXT_PUBLIC_SOCKET_URL="http://localhost:4000"

# Kafka
KAFKA_BROKERS="localhost:9092"

# Load Balancer
LOAD_BALANCER_PORT=8080

# Application Servers
APP_SERVER_PORTS="3001,3002,3003,3004"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Logging
LOG_LEVEL="info"

# Node.js
NODE_ENV="development"
NODE_OPTIONS="--experimental-specifier-resolution=node"

# Performance
CLUSTER_WORKERS=4
